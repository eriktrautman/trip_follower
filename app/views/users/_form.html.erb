<%= form_for @user do |f| %>
  <%= render "shared/errors" %>
  <br/>
  <%= f.label :fname, "First Name" %>
  <%= f.text_field :fname %>
  <br/>
  <%= f.label :lname, "Last Name" %>
  <%= f.text_field :lname %>
  <br/>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <br/>
  <%= f.submit "submit", :disable_with => 'Submitting...' %>

<% end %>